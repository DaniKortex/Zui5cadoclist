<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="idPdfViewerDialog" 
            title="{pdf>/title}"
            contentWidth="90%"
            contentHeight="90%"
            resizable="true"
            draggable="true">
        <content>
            <VBox id="idPdfViewerVBox" class="sapUiMediumMargin">
                <HBox id="idPdfInfoHBox" class="sapUiSmallMarginBottom">
                    <Label text="{i18n>docId}: {pdf>/docId}" class="sapUiSmallMarginEnd"/>
                    <Label text="{i18n>fileName}: {pdf>/title}"/>
                </HBox>
                
                <!-- PDF Viewer using Carousel with embedded PDF -->
                <Carousel id="idPdfCarousel" class="sapUiContentPadding" loop="false">
                    <pages>
                        <VBox id="idPdfPage" alignItems="Center">
                            <core:HTML id="idPdfEmbed" 
                                      content="&lt;embed src='{pdf>/pdfData}' type='application/pdf' width='100%' height='600px' /&gt;"/>
                            <Text id="idPdfFallback" 
                                  text="{i18n>pdfDownloadFallback}" 
                                  class="sapUiSmallMarginTop"/>
                        </VBox>
                    </pages>
                </Carousel>
            </VBox>
        </content>
        <buttons>
            <Button id="idDownloadPdfButton" 
                   text="{i18n>download}" 
                   icon="sap-icon://download"
                   press=".onDownloadPdfFromDialog"/>
            <Button id="idClosePdfButton" 
                   text="{i18n>close}" 
                   press=".onClosePdfDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>