<core:FragmentDefinition
    id="AssignTypesFragment"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idAssignTypesDialog"
        title="Asignar tipo a documentos"
        draggable="true"
        resizable="true"
        contentWidth="600px"
        contentHeight="auto"
    >
        <content>
            <Table
                id="idAssignTypesTable"
                items="{assignTypes>/files}"
            >
                <columns>
                    <Column
                        id="idATColFile"
                        hAlign="Begin"
                    >
                        <Text
                            id="idColArchivo"
                            text="Archivo"
                        />
                    </Column>
                    <Column
                        id="idATColType"
                        hAlign="Begin"
                        width="10rem"
                    >
                        <Text
                            id="idColTipo"
                            text="Tipo"
                        />
                    </Column>
                    <Column
                        id="idATColDesc"
                        hAlign="Begin"
                        width="16rem"
                    >
                        <Text
                            id="idColDesc"
                            text="DescripciÃ³n"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="idATRow">
                        <cells>
                            <Text
                                id="idCellFileName"
                                text="{assignTypes>fileName}"
                            />
                            <Input
                                id="idCellType"
                                value="{assignTypes>typeObj}"
                                showValueHelp="true"
                                valueHelpRequest=".onRowObjectTypeValueHelp"
                            />
                            <Text
                                id="idCellDesc"
                                text="{assignTypes>typeDesc}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
            <Button
                id="idBtnAssignCancel"
                text="Cancelar"
                press=".onAssignTypesDialogCancel"
            />
        </beginButton>
        <endButton>
            <Button
                id="idBtnAssignApply"
                text="Aplicar"
                type="Emphasized"
                press=".onAssignTypesDialogApply"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
